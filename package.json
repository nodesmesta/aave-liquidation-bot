{
  "name": "aave-liquidator-bot",
  "version": "1.0.0",
  "description": "Aave V3 Liquidation Bot for Base Network",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "dev": "tsx src/index.ts",
    "start": "node dist/index.js",
    "compile": "forge build",
    "test": "forge test",
    "deploy:testnet": "forge script script/Deploy.s.sol --rpc-url $BASE_SEPOLIA_RPC_URL --broadcast --verify",
    "deploy:mainnet": "forge script script/Deploy.s.sol --rpc-url $BASE_RPC_URL --broadcast --verify"
  },
  "keywords": [
