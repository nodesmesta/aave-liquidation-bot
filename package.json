  "license": "MIT",
  "dependencies": {
    "@aave/core-v3": "^1.19.3",
    "@bgd-labs/aave-address-book": "^3.1.0",
    "dotenv": "^16.3.1",
    "graphql-request": "^7.4.0",
    "viem": "^2.43.2",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@types/chai": "^5.2.3",
    "@types/mocha": "^10.0.10",
    "@types/node": "^20.10.5",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=20.0.0"
  }
