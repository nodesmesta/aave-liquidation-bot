{
  "name": "aave-liquidator-bot",
  "version": "1.0.0",
  "description": "Aave V3 Liquidation Bot for Base Network",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "dev": "ts-node src/index.ts",
    "start": "node dist/index.js",
    "compile": "hardhat compile",
    "test": "hardhat test",
    "deploy:testnet": "hardhat run scripts/deploy.ts --network base-sepolia",
    "deploy:mainnet": "hardhat run scripts/deploy.ts --network base",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write \"src/**/*.ts\" \"contracts/**/*.sol\""
  },
  "keywords": [
    "aave",
    "liquidation",
    "defi",
    "base",
    "ethereum"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@bgd-labs/aave-address-book": "^3.1.0",
    "dotenv": "^16.3.1",
    "graphql": "^16.12.0",
    "graphql-request": "^7.4.0",
    "viem": "^2.43.2",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@aave/core-v3": "^1.19.3",
    "@nomicfoundation/hardhat-toolbox": "^2.0.2",
    "@typechain/ethers-v5": "^10.2.1",
    "@typechain/hardhat": "^6.1.6",
    "@types/node": "^20.10.5",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "eslint": "^8.56.0",
    "hardhat": "^2.19.2",
    "prettier": "^3.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
