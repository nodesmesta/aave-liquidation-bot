# Network Configuration
# Read operations use Alchemy (fast, reliable)
# Write operations automatically use Flashblocks (basePreconf default)
BASE_RPC_URL=https://base-mainnet.g.alchemy.com/v2/YOUR_ALCHEMY_KEY
BASE_WSS_URL=wss://base-mainnet.g.alchemy.com/v2/YOUR_ALCHEMY_KEY
BASE_WSS_URL_FALLBACK=wss://base-mainnet.infura.io/ws/v3/YOUR_INFURA_KEY
BASE_SEPOLIA_RPC_URL=https://base-sepolia.g.alchemy.com/v2/YOUR_ALCHEMY_KEY

# Wallet Configuration (NEVER commit real values!)
MNEMONIC=your twelve word mnemonic phrase goes here

# Aave V3 Subgraph
AAVE_SUBGRAPH_URL=https://gateway.thegraph.com/api/subgraphs/id/YOUR_SUBGRAPH_ID
SUBGRAPH_API_KEY=

# Liquidator Contract (deploy first, then add address)
LIQUIDATOR_CONTRACT_ADDRESS=

# Logging
LOG_LEVEL=info
LOG_FILE=logs/liquidator.log

# Circuit Breaker
MAX_CONSECUTIVE_LOSSES=3

# Rate Limiting & Batching Configuration
# Reduce these if hitting Alchemy rate limits
MULTICALL_BATCH_SIZE=50           # Users per multicall batch (default: 50)
BATCH_DELAY_MS=100                # Delay between batches in ms (default: 100)
MAX_CONCURRENT_BATCHES=5          # Max concurrent batch operations (default: 5)

